@model UnitConverter.Models.ConversionViewModel

@{
    ViewData["Title"] = "Length Conversion";
}

<h2>Length Conversion</h2>

<form asp-action="Convert" method="post">
    <input type="hidden" asp-for="ConversionType" value="Length" />
    <div class="form-group">
        <label asp-for="InputValue">Value</label>
        <input asp-for="InputValue" class="form-control" type="number" step="any" min="0" />
    </div>
    <div class="form-group">
        <label asp-for="FromUnit">From</label>
        <select asp-for="FromUnit" class="form-control">
            <option value="millimeter">Millimeter</option>
            <option value="centimeter">Centimeter</option>
            <option value="meter">Meter</option>
            <option value="kilometer">Kilometer</option>
            <option value="inch">Inch</option>
            <option value="foot">Foot</option>
            <option value="yard">Yard</option>
            <option value="mile">Mile</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="ToUnit">To</label>
        <select asp-for="ToUnit" class="form-control">
            <option value="millimeter">Millimeter</option>
            <option value="centimeter">Centimeter</option>
            <option value="meter">Meter</option>
            <option value="kilometer">Kilometer</option>
            <option value="inch">Inch</option>
            <option value="foot">Foot</option>
            <option value="yard">Yard</option>
            <option value="mile">Mile</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Convert</button>
</form>

@if (Model.Result.HasValue)
{
    <div class="alert alert-success mt-3">
        Result: @Model.Result.Value
    </div>
}
